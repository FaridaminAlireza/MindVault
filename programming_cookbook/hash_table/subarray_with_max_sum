# Kadaneâ€™s Algorithm: Find the maximum sum of any contiguous subarray.


arr = [1, -2, 3, -1, 5, -3]

# Finds the subarray max sum.
def subarray_max_sum(arr):

    prefix_sum = arr[0]
    max_sum = prefix_sum
    start_index = 0
    end_index = 0
    
    for i in range(1, len(arr)):
       
        if prefix_sum + arr[i] < arr[i]:
            prefix_sum  = arr[i]
            start_index = i
           
        else:
            prefix_sum += arr[i]

        if max_sum < prefix_sum:
            max_sum = prefix_sum
            end_index = i

    max_sum     
        
    return max_sum, start_index, end_index

print(subarray_max_sum(arr))

# Time complexity: O(n)
# Space complexity O(1)